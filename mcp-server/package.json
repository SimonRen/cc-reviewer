{
  "name": "cc-reviewer",
  "version": "1.2.3",
  "description": "MCP server for Claude Code - Get second-opinion feedback from Codex/Gemini CLIs",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "cc-reviewer": "dist/index.js",
    "cc-reviewer-setup": "dist/setup.js"
  },
  "files": [
    "dist/**/*",
    "commands/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mcp",
    "claude",
    "claude-code",
    "codex",
    "gemini",
    "ai-review",
    "code-review"
  ],
  "author": "SimonRen",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/SimonRen/cc-reviewer.git"
  },
  "homepage": "https://github.com/SimonRen/cc-reviewer#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "vitest": "^2.0.0"
  }
}
